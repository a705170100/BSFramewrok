@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Scripts/css/icon.css" rel="stylesheet" />
    <link href="~/Scripts/easyui/1.3.4/themes/default/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/easyui/1.3.4/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui/1.3.4/locale/easyui-lang-zh_CN.js"></script>
    <title>UserCreate</title>
    <style>
        .tablelable {
            border: 1px solid #ccc;
            background-color: rgb(236,243,255);
            width: 80px;
        }

        .tableControl {
            border: 1px solid #ccc;
            background-color: rgb(250,252,255);
            width: 180px;
        }

        .tableForm {
            BORDER-COLLAPSE: collapse;
        }
    </style>


</head>

<body>
    <script>
        function submitdata() {
            $.ajax({
                cache: true,
                type: "POST",
                url: "/home/AccordionCreate",
                data: $('#accadd').serialize(),// formid
                async: false,
                error: function (request) {
                    alert("保存失败,请检查输入是否合法");
                },
                success: function (data) {
                    alert("保存成功");
                    $('#w').window('close');
                    $('#accadd').form('clear');
                    ReloadData('dg');
                }
            });
        }

    </script>
    <form id="accadd" method="post">
        <div class="easyui-tabs" style="width:700px;height:auto">
            <div title="用户基本信息" style="padding:10px">
                <table class="tableForm">
                    <tr style="height: 30px;">
                        <td class="tablelable">名称</td>
                        <td class="tableControl"><input name="acctitle" type="text" /></td>
                        <td class="tablelable">icon</td>
                        <td class="tableControl"><input name="accicon" type="text" /></td>
                        <td class="tablelable">顺序号</td>
                        <td class="tableControl"><input name="accorder" type="text" /></td>
                    </tr>

                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>

                <input id="Button1" type="button" value="button" onclick="submitdata()" />


            </div>
            <div title="其他信息" style="padding:10px">
                <ul class="easyui-tree" data-options="url:'tree_data1.json',method:'get',animate:true"></ul>
            </div>
        </div>
        <div id="choseicons" class="easyui-window" title="Modal Window" data-options="modal:true,closed:false,iconCls:'icon-save'" style="width:700px;height:400px;padding:10px;">

            <img class="icon-blank" />
            <img class="icon-add" />
            <img class="icon-edit" />
            <img class="icon-remove" />
            <img class="icon-save" />
            <img class="icon-cut" />
            <img class="icon-ok" />
            <img class="icon-no" />
            <img class="icon-cancel" />
            <img class="icon-reload" />
            <img class="icon-search" />
            <img class="icon-print" />
            <img class="icon-help" />
            <img class="icon-undo" />
            <img class="icon-redo" />
            <img class="icon-back" />
            <img class="icon-sum" />
            <img class="icon-tip" />
        </div>
    </form>
</body>

</html>
